  <div class=" h-screen flex justify-center items-center bg-bg">
  <div class="bg-gray-100  mx-12">
    <div class="container mx-auto p-6">
      <h1 class="text-2xl font-bold mb-4">Student Login</h1>
      <form action="/student/login" method="POST" class="max-w-sm">
        <div class="mb-4">
          <label for="roll" class="block font-medium">Roll Number:</label>
          <input type="number" id="roll" name="roll" required class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500">
        </div>
        <div class="mb-4">
          <label for="dob" class="block font-medium">Date of Birth:</label>
          <input type="date" id="dob" name="dob" required class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-blue-500">
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
          <a href="/student/result">Login</a>
        </button>
        <a href="/" class="mt-4 font-bold underline text-blue-500 hover:text-blue-600">
          Back
        </a>
      </form>
    </div>
