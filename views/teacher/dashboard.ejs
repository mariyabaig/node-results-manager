<!DOCTYPE html>
<html>
<head>
  <title>Teacher Dashboard</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #f2f2f2;
    }
    button {
      padding: 10px 20px;
      background-color: #2196F3;
      color: #fff;
      text-decoration: none;
      border-radius: 4px;
      margin-bottom: 10px;
      border: none;
    }
    .action-buttons {
      display: flex;
    }
    .action-buttons button {
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <h1>Teacher Dashboard</h1>

  <% if (results.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Roll Number</th>
          <th>Date of Birth</th>
          <th>Name</th>
          <th>Total Score</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach((result) => { %>
          <tr>
            <td><%= result.rollNumber %></td>
            <td><%= result.dob %></td>
            <td><%= result.name %></td>
            <td><%= result.totalScore %></td>
            <td>
              <form action="/teacher/result/<%= result.rollNumber %>" method="GET">
                <button type="submit">View</button>
              </form>
              <form action="/teacher/result/<%= result.rollNumber %>" method="PUT">
                <button type="submit">Edit</button>
              </form>
              <form action="/teacher/result/<%= result.rollNumber %>" method="DELETE">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No results found.</p>
  <% } %>
  
  <a href="/teacher/addresult">Add Result</a>
  <a href="/teacher/results">View All Results</a>
</body>
