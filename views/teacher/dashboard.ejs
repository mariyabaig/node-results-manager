<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Teacher Dashboard</title>
</head>
<body>
    <h1>Welcome to the Teacher Dashboard</h1>
    
    <!-- Button to add result -->
    <button onclick="window.location.href='/addresult'">Add Result</button>
    
    <!-- Display added results -->
    <h2>Added Results:</h2>

    <table>
        <thead>
            <tr>
                <th>Roll Number</th>
                <th>Date of Birth</th>
                <th>Name</th>
                <th>Total Score</th>
            </tr>
        </thead>
        <tbody>
            <% try { %>
                <% results.forEach(function(result) { %>
                    <tr>
                        <td><%= result.rollNumber %></td>
                        <td><%= result.dob %></td>
                        <td><%= result.name %></td>
                        <td><%= result.totalScore %></td>
                    </tr>
                <% }) %>
            <% } catch (error) { %>
                <!-- Error handling code here -->
                <p>An error occurred while processing the results.</p>
            <% } %>
        </tbody> 
    </table>

</body>
</html>
