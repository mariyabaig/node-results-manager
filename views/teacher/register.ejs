
<body>
  
  <div class="flex justify-center items-center min-h-screen bg-gray-100 mt-8">
    
    <div class="w-full max-w-md p-8 bg-white rounded shadow">
      <h1 class="text-2xl font-bold mb-6">Teacher Registration</h1>
      <a href="/teacher/portal" class="mt-4 font-bold underline text-blue-500 hover:text-blue-600">
        Back
      </a>
      <form action="/teacher/register" method="POST">
        <label for="name" class="block mb-2 font-medium">Name:</label>
        <input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded mb-6">

        <label for="email" class="block mb-2 font-medium">Email:</label>
        <input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded mb-4">

        <label for="password" class="block mb-2 font-medium">Password:</label>
        <input type="password" id="password" name="password" required class="w-full px-4 py-2 border border-gray-300 rounded mb-4">

        <label for="confirmPassword" class="block mb-2 font-medium">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required class="w-full px-4 py-2 border border-gray-300 rounded mb-4">
        
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Register</button>
        <a href="/teacher/login" class="mt-4 font-bold underline text-blue-500 hover:text-blue-600">
          Already have an account?
        </a>
      </form>
    </div>
  </div>
</body>

